<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".category"
    android:background="#fafafa"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="6"
            android:paddingTop="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="410dp"
                android:layout_height="280dp"
                android:outlineSpotShadowColor="@color/cardview_shadow_end_color">

                <TextView
                    android:id="@+id/im1"
                    android:layout_width="400dp"
                    android:layout_height="270dp"
                    android:background="@drawable/education1"
                    android:onClick="education"
                    android:text="Child Development"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="410dp"
                android:layout_height="280dp"
                android:outlineSpotShadowColor="@color/cardview_shadow_end_color">

                <TextView
                    android:id="@+id/im4"
                    android:layout_width="400dp"
                    android:layout_height="270dp"
                    android:background="@drawable/en"
                    android:onClick="dieses"
                    android:text="Environment Protection "
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="410dp"
                android:layout_height="280dp"
                android:outlineSpotShadowColor="@color/cardview_shadow_end_color">


                <TextView
                    android:id="@+id/im3"
                    android:layout_width="400dp"
                    android:layout_height="270dp"
                    android:background="@drawable/animal2"
                   android:onClick="animal"
                    android:text="Animal Welfare"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"/>
                </android.support.v7.widget.CardView>

              <android.support.v7.widget.CardView
                android:layout_width="410dp"
                android:layout_height="280dp"
                android:outlineSpotShadowColor="@color/cardview_shadow_end_color">


                  <TextView
                      android:id="@+id/im2"
                      android:layout_width="400dp"
                      android:layout_height="270dp"
                      android:background="@drawable/w1"
                      android:onClick="women"
                      android:text="Domestic Violence "
                      android:textColor="#fff"
                      android:textSize="25dp"
                      android:gravity="center"
                      android:textStyle="bold"
                      />

              </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="410dp"
                android:layout_height="280dp"
                android:outlineSpotShadowColor="@color/cardview_shadow_end_color">

            <TextView
                android:id="@+id/im5"
                android:layout_width="400dp"
                android:layout_height="270dp"
                android:background="@drawable/health"
                android:onClick="health"
                android:text="Health Care"
                android:textColor="#fff"
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="410dp"
                android:layout_height="280dp"
                android:outlineSpotShadowColor="@color/cardview_shadow_end_color">

                <TextView
                    android:id="@+id/im6"
                    android:layout_width="400dp"
                    android:layout_height="270dp"
                    android:background="@drawable/ev1"
                    android:onClick="event"
                    android:text="Events"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </android.support.v7.widget.CardView>



        </GridLayout>
    </ScrollView>
</LinearLayout>